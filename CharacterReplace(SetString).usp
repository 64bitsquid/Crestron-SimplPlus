#DEFAULT_VOLATILE

BUFFER_INPUT INPUT$[50];
STRING_OUTPUT OUTPUT$;

CHANGE INPUT$
{
    INTEGER nextChar, length, i;
    STRING temp[50];

    temp = INPUT$;
    length = len(temp);
    clearbuffer(INPUT$);

    While(find("\x20", temp) > 0)
    {
        for(i = 1 to length STEP 1)
        {
            IF(chr(byte(temp, i)) = "\x20")
            {
                SetString("\x0d", i, temp);
            }
        }
    }	
    OUTPUT$ = temp;
}

